@import './element-ui.styl'

body {
  -moz-osx-font-smoothing grayscale
  -webkit-font-smoothing antialiased
  text-rendering optimizeLegibility
  font-family -apple-system, BlinkMacSystemFont, Helvetica Neue, PingFang SC, Hiragino Sans GB, Microsoft YaHei, Arial, sans-serif
  background-color #f0f2f5
  line-height 1.4285em
}

*, *:before, *:after {
  box-sizing inherit
}

#app {
  // min-width 1000px
}

div:focus {
  outline none
}

a:focus, a:active {
  outline none
}

a, a:focus, a:hover {
  cursor pointer
  color inherit
  text-decoration none
}

.clearfix {
  &:after {
    visibility hidden
    display block
    font-size 0
    content ' '
    clear both
    height 0
  }
}

.height100 {
  height 100%
}

.space-page {
  padding-left 30px
  padding-right 30px
}

.content {
  .title {
    font-size 14px
    color #3d444f
    margin-right 10px
  }
}

.head-title {
  font-size 25px
  color #9ba3af
  font-weight 300
}

.headbar {
  height 32px

  // padding-left 30px
  .title {
    font-size 25px
    color #9ba3af
    font-weight 300
    line-height 32px
  }

  .btns {
    height 32px
    float right
    line-height 32px
  }

  &.out-page {
    height 70px
    background-color white
    box-shadow 0 2px 3px rgba(0, 0, 0, 0.04)

    &.scroll {
      box-shadow 0 3px 4px 0 rgba(0, 0, 0, 0.14), 0 3px 3px -2px rgba(0, 0, 0, 0.12), 0 1px 8px 0 rgba(0, 0, 0, 0.2)
      transition box-shadow 0.1s ease
    }

    .title {
      font-size 21px
      color #3d444f
      line-height 70px
      font-weight 500
    }

    .btns {
      height 70px
      line-height 70px
    }
  }
}

.head .el-tabs__nav-wrap {
  padding-left 30px
}

.about .main {
  margin 50px 30px
}

.about p {
  text-indent 20px
  font-size 16px
  line-height 30px
  font-weight normal
}

.border-l {
  border-left 1px solid #dcdfe6
}

.border-r {
  border-right 1px solid #dcdfe6
}

.border-t {
  border-top 1px solid #dcdfe6
}

.border-b {
  border-bottom 1px solid #dcdfe6
}

.bg-white {
  background-color white
}

.layout-table {
  diaplay table
}

#app .el-dialog__wrapper {
  overflow-y hidden
}

.cursor {
  cursor pointer
}

.no-outline:focus {
  outline none
}

.flex1 {
  flex 1
}

.article-title {
  overflow hidden
  white-space nowrap
  text-overflow ellipsis
}

.table-img {
  width 25px
  height 25px
}

.common-img {
  width 100%
  height auto
}

@keyframes bounceIn {
  from, 20%, 40%, 60%, 80%, to {
    animation-timing-function cubic-bezier(0.215, 0.61, 0.355, 1)
  }

  0% {
    opacity 0
    transform scale3d(0.3, 0.3, 0.3)
  }

  20% {
    transform scale3d(1.1, 1.1, 1.1)
  }

  40% {
    transform scale3d(0.9, 0.9, 0.9)
  }

  60% {
    opacity 1
    transform scale3d(1.03, 1.03, 1.03)
  }

  80% {
    transform scale3d(0.97, 0.97, 0.97)
  }

  to {
    opacity 1
    transform scale3d(1, 1, 1)
  }
}

.right-corner {
  position relative

  .corner-text {
    position absolute
    right -30px
    top -3px
    font-size 16px
    font-weight 700
    color rgb(239, 71, 71)
    height 1em
    transform rotate(45deg)
  }
}